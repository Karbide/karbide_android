<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayoutArticleControls"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="@dimen/margin_5dp"
    android:layout_marginRight="@dimen/category_full_view_article_image_margin_bottom"
    android:layout_marginTop="@dimen/category_full_view_controls_margin_top"
    android:orientation="horizontal"
    android:gravity="bottom">

        <com.karbide.bluoh.ui.CustomTextView
            android:id="@+id/tvNewsSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_overlay"
            app:typeface="Roboto-Light.ttf"
            android:layout_gravity="left|bottom"
            android:drawableLeft="@drawable/web_dark"
            android:gravity="center_vertical">
        </com.karbide.bluoh.ui.CustomTextView>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_gravity="right|bottom">

            <CheckBox
                android:id="@+id/buttonLike"
                android:layout_width="@dimen/category_full_view_controls_button_width"
                android:layout_height="@dimen/category_full_view_controls_button_height"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/category_full_view_controls_button_margin"
                android:background="@android:color/transparent"
                android:button="@drawable/selector_like_button_dark" />

            <CheckBox
                android:id="@+id/buttonBookmark"
                android:layout_width="@dimen/category_full_view_controls_button_width"
                android:layout_height="@dimen/category_full_view_controls_button_height"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/category_full_view_controls_button_margin"
                android:background="@android:color/transparent"
                android:button="@drawable/selector_bookmark_button_dark" />

            <ImageButton
                android:id="@+id/imageButtonShare"
                android:layout_width="@dimen/category_full_view_controls_button_width"
                android:layout_height="@dimen/category_full_view_controls_button_height"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/selector_share_button_dark" />
        </LinearLayout>
</LinearLayout>